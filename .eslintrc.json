{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "@babel/react"
    ],
    "env": {
        "browser": true,
        "mocha": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "react/jsx-uses-react": 1,
        "react/prop-types": 0,
        "react/display-name": 0
    },
    "parserOptions":{
        "ecmaVersion": 2018,
        "sourceType"   : "module",
        "ecmaFeatures" : {
            "modules": true,
            "legacyDecorators": true
        }
    }
}